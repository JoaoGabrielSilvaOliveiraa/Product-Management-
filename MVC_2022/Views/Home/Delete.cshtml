@model MVC_2024.Models.EstoqueModel

<h2>Excluir Estoque</h2>

<p>Tem certeza de que deseja excluir o estoque <strong>@Model.Nome</strong>?</p>

<form asp-action="DeleteConfirmed" method="post">
    <button type="submit" class="btn btn-danger">Excluir</button>
</form>

<a href="@Url.Action("Index", "Estoque")" class="btn btn-secondary">Cancelar</a>
